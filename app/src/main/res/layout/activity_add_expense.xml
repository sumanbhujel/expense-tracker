<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddExpenseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Categories Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_exp_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_exp_category_value"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:clickable="true"
                android:hint="Select Category"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/fullwhite"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Notes Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_note_value"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:hint="Note"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/fullwhite"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Amount Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount_value"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/fullwhite"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_date_value"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:clickable="true"
                android:hint="Date"
                android:inputType="date"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/fullwhite"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_save_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fece2f"
            android:fontFamily="@font/bungee_inline"
            android:text="Save" />


    </LinearLayout>


</LinearLayout>
